{
  "expo": {
    "name": "Islamku",
    "slug": "islamku",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/islamku_2.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/islamku_2.png",
      "resizeMode": "contain",
      "backgroundColor": "#4A148C"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.islamku.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/islamku_logos.png",
        "backgroundColor": "#ffffff",
        "enableProguard": true,
        "enableShrinkResources": true,
        "enableR8": true
      },
      "package": "com.islamku.app",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/islamku_logos.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to find Qibla direction."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/islamku_logos.png",
          "color": "#7E57C2",
          "defaultChannel": "prayer-times",
          "sounds": [
            "./assets/audio/adzan.mp3",
            "./assets/audio/adzan_shubuh.mp3"
          ]
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-2147056952925982~8318395213",
          "iosAppId": "ca-app-pub-2147056952925982~8318395213"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "4f686e83-ab07-45bc-a041-88f49ca43f78"
      }
    }
  }
}
