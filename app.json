{
  "expo": {
    "name": "Islamku",
    "slug": "islamku",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/islamku_2.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/islamku_2.png",
      "resizeMode": "contain",
      "backgroundColor": "#4A148C"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.islamku.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/islamku_logos.png",
        "backgroundColor": "#ffffff",
        "enableProguard": true,
        "enableShrinkResources": true,
        "enableR8": true,
        "useNextNotificationsApi": true
      },
      "package": "com.islamku.app",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/islamku_logos.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to find Qibla direction."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/islamku_logos.png",
          "color": "#7E57C2",
          "sounds": ["./assets/audio/adzan.mp3", "./assets/audio/adzan_shubuh.mp3"],
          "defaultChannel": "prayer-times",
          "channels": [
            {
              "name": "prayer-reminder",
              "importance": "high",
              "sound": "default",
              "enableVibrate": true,
              "vibrationPattern": [0, 250, 250, 250],
              "lightColor": "#7E57C2"
            },
            {
              "name": "prayer-times",
              "importance": "max",
              "sound": "adzan",
              "enableVibrate": true,
              "vibrationPattern": [0, 250, 250, 250],
              "lightColor": "#7E57C2"
            },
            {
              "name": "prayer-times-fajr",
              "importance": "max",
              "sound": "adzan_shubuh",
              "enableVibrate": true,
              "vibrationPattern": [0, 250, 250, 250],
              "lightColor": "#7E57C2"
            }
          ]
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-2147056952925982~8318395213",
          "iosAppId": "ca-app-pub-2147056952925982~8318395213"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "d85c7b6c-9030-47bf-b677-0a1d7f915f1f"
      }
    }
  }
}
